# This file stores environment variables for Gunicorn (Django)
# Replace the placeholders with actual secret values or ${{ secrets.VAR }} 
# when using a robust secrets management system (like Vault or SSM Parameter Store).
# For GitHub Actions deployment, we will modify the systemd service file to load these directly.

SECRET_KEY=${{ secrets.SECRET_KEY }}
DEBUG=${{ secrets.DEBUG }}
ALLOWED_HOSTS=${{ secrets.ALLOWED_HOSTS }}
BASE_URL=${{ secrets.BASE_URL }}

# AWS S3 Storage Secrets
AWS_ACCESS_KEY_ID=${{ secrets.AWS_ACCESS_KEY_ID }}
AWS_SECRET_ACCESS_KEY=${{ secrets.AWS_SECRET_ACCESS_KEY }}
AWS_DEFAULT_REGION=${{ secrets.AWS_DEFAULT_REGION }}

# Payment Gateway Secrets (Example: Razorpay)
RAZORPAY_KEY_ID=${{ secrets.RAZORPAY_KEY_ID }}
RAZORPAY_SECRET_KEY=${{ secrets.RAZORPAY_SECRET_KEY }}

# Social Auth Secrets (Example: Facebook)
SOCIAL_AUTH_FACEBOOK_KEY=${{ secrets.SOCIAL_AUTH_FACEBOOK_KEY }}
SOCIAL_AUTH_FACEBOOK_SECRET=${{ secrets.SOCIAL_AUTH_FACEBOOK_SECRET }}

# Email Secrets
EMAIL_HOST_USER=${{ secrets.EMAIL_HOST_USER }}
EMAIL_HOST_PASSWORD=${{ secrets.EMAIL_HOST_PASSWORD }}